<div class="jumbotron p-3 p-md-5 text-dark rounded lightgrey-pad">
  <div class="col-md-6 px-0">
    <h1 class="display-4 font-italic">Meet the family..</h1>
    <p class="lead my-3">These are the dogs you will be getting your puppies from. we love our dogs like family. We hope you find a family member as well!</p>
    <!-- <p class="lead mb-0"><a href="#" class="text-white font-weight-bold">Continue reading...</a></p> -->
    <% if user_signed_in? %>
      <%= link_to 'New Dog', new_post_path, class: 'btn btn-warning' %>
    <% end %>
  </div>
</div>

<div class="album py-5 bg-light">
<div class="container">

  <div class="row">
    <% @posts.each do |post| %>
    <div class="col-md-4">
      <div class="card mb-4 box-shadow">
         <%= link_to (image_tag post.photo, class: "phover card-img-top"), post  %>
        <div class="card-body bg-lights">
          <strong class="dogtitle"><%= post.title.upcase %></strong>
          <p class="card-text"><%= post.body %></p>
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">

              <% if user_signed_in? %>
                    <%= link_to 'Edit', edit_post_path(post),class: 'btn btn-sm btn-outline-secondary' %>
                    <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-sm btn-outline-secondary' %>
              <% end %>
            </div>
            <small class="text-muted"></small>
          </div>
        </div>
      </div>
    </div>
      <% end %>
