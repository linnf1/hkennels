
  <div class="jumbotron p-3 p-md-5 text-white rounded bg-dark">
    <div class="col-md-6 px-0">
      <h1 class="display-4 font-italic">Meet the family..</h1>
      <p class="lead my-3">These are the dogs you will be getting your puppies from. we love our dogs like family. We hope you find a family member as well!</p>
      <!-- <p class="lead mb-0"><a href="#" class="text-white font-weight-bold">Continue reading...</a></p> -->
        <%= link_to 'New Dog', new_post_path, class: 'btn btn-warning' %>
    </div>
  </div>
  <% @posts.each do |post| %>
  <div>
      <div class="card flex-md-row mb-4 box-shadow h-md-250">
        <div class="card-body d-flex flex-column ">
          <strong class="d-inline-block mb-2 text-primary"></strong>
          <h3 class="mb-0">
            <a class="text-dark" href="#"><%= post.title %></a>
          </h3>
          <div class="mb-1 text-muted">
                    <%= link_to 'View', post %> |
                    <%= link_to 'Edit', edit_post_path(post)  %> |
                    <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></div>

          <p class="card-text mb-auto"><%= post.body %></p>
          <%= link_to 'Read more about me', post %>
        </div>
        <%= image_tag post.image.url, class: "card-img-right flex-auto d-none d-md-block" %>

    </div>
      <% end %>
    </div>
  </div>
</div>
